{
  "name": "@personal-finance-app/shared-types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for Personal Finance App",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
