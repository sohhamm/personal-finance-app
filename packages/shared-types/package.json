    "dev": "tsc --watch",
    "lint": "bunx biome lint src/",
    "format": "bunx biome format --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}